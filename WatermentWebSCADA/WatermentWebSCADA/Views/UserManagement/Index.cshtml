@model IEnumerable<WatermentWebSCADA.ViewModels.UsersAndRolesVM>
@{
    ViewBag.Title = "User Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/Content/usermanagement.css" rel="stylesheet" />
</head>

<div>
    <h2>User Management</h2>
    <div class="row">
        <div class="col-md-2">
            <h4>Actions</h4>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="well">
                                <a id="style-1" href="~/Account/Register">Add User</a>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="well">
                                <a id="style-1" href="~/UserManagement/UserFacility">Facility Ownership</a>
                            </div>
                        </div>
                    </div>
                </div>
        <div class="col-md-5">
            <h4>Sessions</h4>
            <div class="col-md-12 well">
                <p>
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />

                </p>
                <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>
            </div>
        </div>
        <div class="col-md-5">
            <h4>Connections</h4>
            <div class="col-md-12 well">
                <p>
                    <br />
                    <br />
                    <br />
                </p>
                <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <h4>Roles</h4>
            <div class="col-md-12 well">
                <div class="row">
                    <div class="container">
                        <div class="button">
                            <p>Admin</p>
                            <p>SuperUser</p>
                            <p>Maintenance</p>
                            <p>User</p>
                            <p>Guest</p>

                        </div>
                    </div>
                </div>
            </div>
          </div>
            <div class="col-md-10">
                <h4>Registrated Users</h4>
                <div class="col-md-12 well">
                    <p>

                        <table class="table table-hover, hoverTable tr:hover">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.UserId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UserName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RoleName)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr onclick="getElementById('edit-1').click()" style="cursor: pointer">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserId)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", new { id=item.UserId})">@Html.DisplayFor(modelItem => item.UserName)</a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoleName)
                                    </td>
                                </tr>
                            }

                        </table>
                    </p>
                </div>
        </div>
    </div>
</div>




