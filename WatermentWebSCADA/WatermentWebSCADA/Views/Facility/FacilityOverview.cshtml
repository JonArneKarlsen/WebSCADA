
@model WatermentWebSCADA.ViewModels.MainViewModel

@{
    ViewBag.Title = "FacilityOverview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        .intro {
            background-color: lightgreen;
            color: black;
            margin: 20px 0 20px 0;
            padding: 20px;
            border-radius: 25px;
        }

        .vv {
            background-color: rgb(187, 181, 181);
            color: white;
            margin: 20px 0 20px 0;
            padding: 20px;
            border-radius: 25px;
        }

        .intro {
            background-color: lightgreen;
            color: black;
            margin: 20px 0 20px 0;
            padding: 20px;
            border-radius: 25px;
        }


        .headerDivider {
            border-left: 5px solid #38546d;
            border-right: 5px solid #16222c;
            height: 80px;
            position: absolute;
            right: 249px;
            top: 10px;
        }

        .main {
            background-color: black;
            color: red;
            margin: 20px 0 20px 0;
            padding: 20px;
        }

        .frame {
            box-sizing: border-box;
            -moz-box-sizing: border-box;
            filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#DDDDDD', endColorstr='#FFFFFF',GradientType=0 );
            /*width: auto;*/
            height: 350px;
            opacity: 1;
            border-radius: 6px;
            background-color: rgb(238, 237, 208);
            box-shadow: 0px 2px 0px #FFFFFF inset, 0px -2px 0px #ffffff inset,0px 0px 1px 1px #DDD;
            padding: 20px;
            margin-top: 25px;
            margin-bottom: 25px;
            margin-right: 25px;
            margin-left: 25px;
            overflow-y: scroll;
            position: relative;
        }

        .frame {
            background-size: 100% 100px;
            background-repeat: no-repeat;
        }

        .r1 {
            width: 25%;
            float: left;
        }

        .r2 {
            width: 25%;
            float: right;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 20px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        h1 {
            font-weight: bolder;
        }
    </style>
</head>

<h2 align="center">FacilityOverview</h2>



<div class="container">
    <div class="col-lg-4">
        <div class="frame">
            <h4 align="center" style="border-bottom:solid">Countries with facilities</h4>

            <div class="row">

                    @foreach (var item in Model.countries)
                      {
              <ul>
                <li style="font-size:large">@Html.ActionLink(item.Name, "FacilityOverview", new { id = item.Id })</li>  
               </ul>
                         
 
                        }
            
                </div>
            </div>
            </div>
        <div class="col-lg-8">
            <div class="frame">

                <h3 align="center"style="border-bottom:solid">Facilities</h3>
                
                @foreach (var item in Model.Facilites)
            {

                    <div class="vv"><p align="center">@Html.ActionLink(item.Name, "FacilityDetails", "Facility", new { id = item.Id }, null)</p> </div>

                }


            </div>
        </div>
        </div>




