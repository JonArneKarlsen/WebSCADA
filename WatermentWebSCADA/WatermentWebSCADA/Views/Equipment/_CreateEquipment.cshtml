@model WatermentWebSCADA.ViewModels.EquipmentAddVM

<div class="modal-body">
            @using (Html.BeginForm("CreateEquipment", "Equipment", FormMethod.Post))
            {
                @Html.ValidationSummary(true)
                    <legend>Equipment</legend>
                    <table width="100%">
                        
                        <tr>
                            <td>@Html.LabelFor(model => model.Tag)</td>
                            <td>
                                @Html.EditorFor(model => model.Tag)
                                @Html.ValidationMessageFor(model => model.Tag)
                            </td>
                        </tr>
                        <tr>
                            <td>@Html.LabelFor(model => model.SIUnits)</td>
                            <td>
                                @Html.EditorFor(model => model.SIUnits)
                                @Html.ValidationMessageFor(model => model.SIUnits)
                            </td>

                        </tr>

                        <tr>
                            <td>@Html.LabelFor(model => model.Description)</td>
                            <td>
                                @Html.EditorFor(model => model.Description)
                                @Html.ValidationMessageFor(model => model.Description)
                            </td>

                        </tr>

                        <tr>
                            <td>@Html.LabelFor(model => model.LastCalibrated)</td>
                            <td>
                                @Html.EditorFor(model => model.LastCalibrated)
                                @Html.ValidationMessageFor(model => model.LastCalibrated)
                            </td>

                        </tr>
                        <tr>
                            <td>@Html.LabelFor(model => model.facilities_Id)</td>
                            <td>
                                @Html.EditorFor(model => model.facilities_Id)
                                @Html.ValidationMessageFor(model => model.facilities_Id)
                            </td>

                        </tr>
                        <tr>
                            <td></td>
                            <td>
                                <button type="submit" id="btnSave" name="Command" value="Save" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only">
                                    <span class="ui-button-text">Save</span>
                                </button>
                            </td>
                        </tr>
                    </table>
                    }
</div>


<script type="text/javascript">
    $(function () {
        $('#approve-btn').click(function () {
            $('#modal-container').modal('hide');
        });
    });
</script>
